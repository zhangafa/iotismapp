
.top{
	height: 60rpx;
	padding: 60rpx 40rpx 20rpx 40rpx;
	position:relative;
}
.ic_image,
.ic_image ._img{
	width: 40rpx;
	height: 40rpx;
}
.ic_message{
	margin-left: 25rpx;
}
.ic_logo{
	position:absolute;
	left: 50%;
	margin-left: -110rpx;
	width: 220rpx;
	height: 40rpx;
}
.ic_logo ._img{
	width:100%;
	height:40rpx;
}
.uni-slide uni-swiper{
	height: 450rpx;
}
.uni-slide ._img{
	width:100%;
	height:100%;
}
.uni-swiper-msg-icon ._img{
	width:80%;
	height:80%;
}
.uni-swiper-msg{
	width: auto;
	height: 60rpx;
	padding-left: 20rpx;
	padding-right: 20rpx;
}
.uni-swiper-msg-con{
	overflow:hidden;
}
.uni-nav{
	 display: -webkit-box;
	 display: -webkit-flex;
	 display: -ms-flexbox;
	 display: flex;
	 -webkit-flex-wrap:wrap;
	     -ms-flex-wrap:wrap;
	         flex-wrap:wrap;
	 -webkit-box-pack:center;
	 -webkit-justify-content:center;
	     -ms-flex-pack:center;
	         justify-content:center;
	 padding-top: 15rpx;
}
.uni-nav-con{
	width: 25%;
	text-align:center;
	margin-bottom: 15rpx;
}
.image-view{
	width: 60rpx;
	height: 60rpx;
	margin: 10rpx auto;
}
.image-view ._img{
	width:100%;
	height: 100%;
}
.event-box{
	padding: 0 20rpx;
}
.event-box-top,
.event-box-con{
	display:-webkit-box;
	display:-webkit-flex;
	display:-ms-flexbox;
	display:flex;
	position:relative;
}
.event-box-con{
	color:#666;
	padding-bottom: 20rpx;
}
.event-box-toptitle{
	max-width: 65%;
	font-size:28rpx;
	overflow:hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	padding: 10rpx 0;
}
.type{
	margin: 15rpx 5rpx;
	padding: 0 10rpx;
	border-radius: 10rpx;
}
.event-box-conleft{
	width: 80%;
}
.event-box-conright{
	width: 20%;
	text-align:right;
	padding-top: 20rpx;
	color:#6FD8A5;
	font-size: 28rpx;
}
.alarmType{
	width: 30rpx;
	height: 50rpx;
	position:absolute;
	right:0;
	top:0;
}
.alarmType:after{
	content:'';
	width:0;
	height:0;
	font-size:0;
	line-height:0;
	border-left:15rpx solid transparent;
	border-right: 15rpx solid transparent;
	border-bottom:15rpx solid #fff;
	position:absolute;
	left:0;
	bottom:0;
}

